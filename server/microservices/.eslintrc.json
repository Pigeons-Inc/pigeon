{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  },
  "extends": [
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "new-cap": [
      "error",
      {
        "capIsNewExceptions": [
          "Get",
          "Post",
          "Delete",
          "Put",
          "Patch",
          "Head",
          "Route",
          "Body",
          "Header",
          "Query"
        ]
      }
    ],
    "class-methods-use-this": 0
  }
}
